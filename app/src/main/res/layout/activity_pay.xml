<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_layout_footer"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large_dp"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/edit_text_bill_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:background="@drawable/border_white_1"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="@string/bill_id"
            android:inputType="number"
            android:maxLength="15"
            android:padding="@dimen/medium_dp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_text_purchase_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:background="@drawable/border_white_1"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="@string/purchase_id"
            android:inputType="number"
            android:maxLength="15"
            android:padding="@dimen/medium_dp"
            tools:ignore="Autofill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:background="@drawable/border_white_1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_text_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="@string/amount"
                android:inputType="number"
                android:maxLength="13"
                tools:ignore="Autofill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/medium_dp"
                android:text="@string/rial"
                android:textColor="@android:color/primary_text_light" />

            <Button
                android:id="@+id/button_purchase"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border_blue_1"
                android:text="@string/purchase"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/button_bill_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/large_dp"
            android:layout_marginTop="@dimen/medium_dp"
            android:layout_marginRight="@dimen/large_dp"
            android:layout_marginBottom="@dimen/medium_dp"
            android:background="@drawable/border_green_1"
            android:text="@string/bill_payment"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <include layout="@layout/footer" />
</RelativeLayout>